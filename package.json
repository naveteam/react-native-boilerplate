{
  "name": "boilerplate",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/runtime": "^7.4.3",
    "babel-eslint": "^9.0.0",
    "babel-jest": "^24.7.1",
    "babel-preset-react-native": "^4.0.1",
    "husky": "^1.3.1",
    "jest": "^24.7.1",
    "jest-react-native": "^18.0.0",
    "lint-staged": "^7.2.0",
    "metro-react-native-babel-preset": "^0.53.1",
    "prettier-standard": "^8.0.1",
    "react-test-renderer": "16.8.3",
    "standard": "^12.0.1"
  },
  "scripts": {
    "start": "react-native start",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    },
    "preset": "react-native",
    "testMatch": [
      "**/?(*.)test.js?(x)"
    ],
    "moduleNameMapper": {
      "styled-components": "<rootDir>/node_modules/styled-components/dist/styled-components.native.cjs.js"
    }
  },
  "dependencies": {
    "axios": "^0.18.0",
    "react": "^16.8.3",
    "react-native": "^0.59.5",
    "react-native-gesture-handler": "^1.1.0",
    "react-navigation": "^3.8.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "styled-components": "^4.2.0"
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "standard": {
    "ignore": [
      ".vscode/*"
    ],
    "parser": "babel-eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
